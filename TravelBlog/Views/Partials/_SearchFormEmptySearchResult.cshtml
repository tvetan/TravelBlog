@inherits UmbracoViewPage<SimpleSearchModel>
@using TravelBlog.Controllers.SurfaceControllers

@using (Html.BeginUmbracoForm<SimpleSearchSurfaceController>("Find",
        null,
        new { @class = "search-form" },
        FormMethod.Get))
{
    <div class="input-group">
        <label class="screen-reader-text" for="s">Search for:</label>
        <input type="text" class="form-control search-query"
               placeholder="Search…"
               value="@Model.SearchedText"
               name="SearchedText"
               title="Search for:">
        <span class="input-group-btn">
            <button type="submit" class="btn btn-default"
                    name="submit"
                    id="searchsubmit"
                    value="Search">
                Search
            </button>
        </span>
    </div>
}
